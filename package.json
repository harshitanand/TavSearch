{
  "name": "market-intelligence-system",
  "version": "1.0.0",
  "description": "Multi-Agent Market Intelligence System using LangGraph, Tavily API, and MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "build": "echo 'Build complete - Node.js application'",
    "deploy:aws": "eb deploy",
    "db:seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/runMigrations.js",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "docker:build": "docker build -t market-intelligence .",
    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "market-intelligence",
    "multi-agent",
    "langgraph",
    "tavily",
    "mongodb",
    "openai",
    "nodejs",
    "ai",
    "business-intelligence",
    "market-research"
  ],
  "author": "Harshit Anand <harshitanand94@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "agenda": "^5.0.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "canvas": "^2.11.2",
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "html-pdf": "^3.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.2",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "@langchain/core": "^0.3.15",
    "@langchain/community": "^0.3.12",
    "@langchain/openai": "^0.3.11",
    "@langchain/anthropic": "^0.3.7",
    "langsmith": "^0.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/market-intelligence-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/market-intelligence-system/issues"
  },
  "homepage": "https://github.com/your-username/market-intelligence-system#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "consistent-return": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
